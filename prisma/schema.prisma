generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model FeaturedImages {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  images Image[]
}

model GalleryImages {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  images GalleryImage[]
} 

enum ImageCategory {
WATERCOLORS
PASTELS
CHARCOAL
ARCRYLICS
MULTIMEDIACOLLAGE
}

type GalleryImage {
title String
description String
image Image
category ImageCategory

}

type Image {
  key                String
  name            String
  url                 String
  size               Int
  serverData  ServerData
}

type ServerData {
  uploadedBy String  
}